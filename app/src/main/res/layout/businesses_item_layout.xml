<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/item_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userNameTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="User Name and Surname"
            android:textColor="@color/Blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/locationTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:text="Location | Distance KM "
            android:textColor="@color/lightBlue" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp">

            <ProgressBar
                android:id="@+id/simpleProgressBar3"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:progress="28" />

            <TextView
                android:id="@+id/profileScoreTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Profile Score 28% "
                android:textColor="@color/lightBlue" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:src="@drawable/call" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_marginLeft="50dp"
                android:src="@drawable/add_prsn" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_marginLeft="100dp"
                android:src="@drawable/location" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Hi Community ! We have graet deals for you . Check us out! "
            android:textColor="@color/lightBlue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptionTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text=" Discription about Work !"
            android:textColor="@color/lightBlue" />


    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:src="@drawable/p1"
        app:shapeAppearanceOverlay="@style/roundedview"

        />




</androidx.cardview.widget.CardView>